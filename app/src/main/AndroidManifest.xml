<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maskjs.korona_zakupy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/korona_zakupy_1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.base.NonUserBaseActivity"></activity>
        <activity android:name=".ui.base.UserBaseActivity" />
        <activity android:name=".ui.new_order.NewOrderActivity" />
        <activity
            android:name=".ui.person_in_quarantine.PersonInQuarantineActivity"
            android:label="@string/title_activity_person_in_quarantine" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.volunteer.VolunteerActivity"
            android:label="@string/title_activity_volunteer" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:label="@string/title_activity_register_part1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>