<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="addProductDialogViewModel"
            type="com.maskjs.korona_zakupy.viewmodels.add_product_dialog.AddProductDialogViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dialog_layout_text_input_product_name"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColorHint="@color/secondaryTextColor"
            app:errorEnabled="true"
            app:errorTextColor="#F44336"
            app:errorText="@{addProductDialogViewModel.productTextInputLayout.errorContent}"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dialog_hint_add_product"
                android:inputType="textPersonName"
                android:text="@={addProductDialogViewModel.productTextInputLayout.textContent}"
                android:textColor="@color/secondaryTextColor" />
        </com.google.android.material.textfield.TextInputLayout>

        <NumberPicker
            android:id="@+id/dialog_number_picker"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:displayedValues="@{addProductDialogViewModel.quantityNumberPickerViewModel}"
            app:maxValue="@{addProductDialogViewModel.quantityNumberPickerViewModel}"
            app:minValue="@{addProductDialogViewModel.quantityNumberPickerViewModel}"
            app:onValueChangedListenerNumberPicker="@{addProductDialogViewModel.quantityNumberPickerViewModel}"
            app:wrapSelectorWheel="@{addProductDialogViewModel.quantityNumberPickerViewModel}" />

        <NumberPicker
            android:id="@+id/dialog_unit_picker"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:onValueChangedListenerNumberPicker="@{addProductDialogViewModel.unitNumberPickerViewModel}"
            app:maxValue="@{addProductDialogViewModel.unitNumberPickerViewModel}"
            app:minValue="@{addProductDialogViewModel.unitNumberPickerViewModel}"
            app:displayedValues="@{addProductDialogViewModel.unitNumberPickerViewModel}"
            app:wrapSelectorWheel="@{addProductDialogViewModel.unitNumberPickerViewModel}"/>
    </LinearLayout>
</layout>

