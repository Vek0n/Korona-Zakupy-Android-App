<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/avatarThumbnailImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="lol"
        android:scaleType="centerInside"
        tools:src="@android:mipmap/sym_def_app_icon" />

    <TextView
        android:id="@+id/ratingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="2dp"
        android:maxLines="1"
        android:paddingEnd="6dp"
        android:textColor="#000000"
        android:textSize="18dp"
        tools:text="Detail" />

    <RelativeLayout
        android:id="@+id/recipe_list_text_layout"
        android:layout_width="274dp"
        android:layout_height="61dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="7dp"
        android:layout_toStartOf="@+id/ratingTextView"
        android:layout_toEndOf="@id/avatarThumbnailImageView">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/secondaryTextColor"
            android:textSize="22sp"
            tools:text="Title" />

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTextView"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="7dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/secondaryTextColor"
            android:textSize="16sp"
            tools:text="Subtitle" />

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="123dp"
            android:layout_height="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="68dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/nameTextView"
            android:text="STATUS"
            android:textColor="#000000"
            android:textSize="16sp" />

    </RelativeLayout>
</RelativeLayout>
