<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animationCache="false"
    android:background="@drawable/gradient"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/reg1_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="@string/reg_hello"
        android:textColor="@color/secondaryTextColor"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/reg2_firstName_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="@string/reg_firstName"
        android:inputType="textPersonName"
        android:autofillHints="" />

    <EditText
        android:id="@+id/reg2_lastName_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/reg_lastName"
        android:inputType="textPersonName"
        android:autofillHints="" />

    <EditText
        android:id="@+id/reg2_address_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/reg_address"
        android:inputType="textPostalAddress"
        android:autofillHints="" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/primaryDarkColor"
        android:text="@string/reg_image" />

</LinearLayout>